package exercises;
import java.util.Scanner;
public class AgeProgram {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int age;

		Scanner input = new Scanner(System.in);
		
		System.out.println("Please enter your age? >>>>>>");
		age = input.nextInt();
		if(age >= 0 & age <= 12)
		{
			System.out.println("You're pretty young, I'm suprised you can even manage to use this program.");
		}
		if(age == 12)
		{
			System.out.println("Oh dear you're 12, please try not to be obnoxious like 12 year olds usually are.");
		}
		if(age >= 13 & age <= 17)
		{
			System.out.println("Ah, you're finally a teen, this will either be the best or worst years of your life, enjoy!");
		}
		if(age == 18)
		{
			System.out.println("Congratulations! You're now legally an adult! Time for you to have a bunch of responsibilities you probably didn't ask for!");
		}
		if(age >= 19 & age <= 30)
		{
			System.out.println("You're still young, go on, have fun and enjoy life.");
		}
		if(age >= 31 & age <= 50)
		{
			System.out.println("You're starting to age, start making smart investments for your future.");
		}
		if(age >= 51 & age <= 65)
		{
			System.out.println("You're close to retiring, hopefully you've been saving up.");
		}
		if(age >= 66 & age <= 100)
		{
			System.out.println("I fear the end is nye for you,\n with your money I hope you've been saving up, go enjoy your remaining days in grandeur.");
		}
		else
		{
			System.out.println("You probably should not be operating a computer or even be alive at this point!");
		}
	}

}
