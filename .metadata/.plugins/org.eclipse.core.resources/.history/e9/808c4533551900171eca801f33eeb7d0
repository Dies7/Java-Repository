package exercises;
import java.util.Scanner;
public class QuartsToGallons {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int quarts;
		int gallons;
		int quartsRemainder;
		Scanner input = new Scanner(System.in);
		System.out.print("Please enter the amount of quarts required for a job >> ");
		quarts = input.nextInt();
		gallons = quarts / 4;
		quartsRemainder = quarts % 4;
		System.out.println("A job that needs " + quarts + " quarts requires " + gallons + " gallons plus " + quartsRemainder + " quarts.");
	}

}
